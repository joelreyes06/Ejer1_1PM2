<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejer1PM2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="OPERACIONES MATEMATICAS" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Numero1" FontSize="Title" Padding="0,0,0,0"/>
        <Entry x:Name="n1" Placeholder="Ingrese un Numero" Keyboard="Numeric" Margin="5,0,5,0"/>

        <Label Text="Numero2" FontSize="Title" Padding="0,0,0,0"/>
        <Entry x:Name="n2" Placeholder="Ingrese un Numero" Keyboard="Numeric" Margin="5,0,5,0" />

        


        <Button Text="Suma" x:Name="btnsuma" Clicked="btnsuma_Clicked" BackgroundColor="AliceBlue" TextColor="Blue" />
        <Button Text="Resta" x:Name="btnresta" Clicked="btnresta_Clicked" BackgroundColor="AliceBlue" TextColor="Blue" />
        <Button Text="Multiplicacion" x:Name="btnmultiplicacion" Clicked="btnmuti_Clicked" BackgroundColor="AliceBlue" TextColor="Blue" />
        <Button Text="Division" x:Name="btndivision" Clicked="btndivi_Clicked" BackgroundColor="AliceBlue" TextColor="Blue" />



    </StackLayout>

</ContentPage>
